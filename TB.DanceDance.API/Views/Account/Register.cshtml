@using TB.DanceDance.API.Quickstart.Account;
@model RegisterViewModel

<div>
    <div>
        <h1>Register</h1>
        <p>Choose how to login</p>
    </div>

    <partial name="_ValidationSummary" />

    <div>

        <div>
            <div>
                <div>
                    <h2>Local Account</h2>
                </div>

                <div>
                    <form asp-route="Register">
                        <input type="hidden" asp-for="ReturnUrl" />

                        <div>
                            <label asp-for="Email"></label>
                            <input placeholder="Email" asp-for="Email" autofocus>
                        </div>
                        <div>
                            <label asp-for="FirstName"></label>
                            <input placeholder="First Name" asp-for="FirstName" autofocus>
                        </div>
                        <div>
                            <label asp-for="LastName"></label>
                            <input placeholder="Last Name" asp-for="LastName" autofocus>
                        </div>
                        <div>
                            <label asp-for="Password"></label>
                            <input type="password" placeholder="Password" asp-for="Password" autocomplete="off">
                        </div>
                        <div>
                            <label asp-for="ConfirmPassword"></label>
                            <input type="password" placeholder="Password" asp-for="ConfirmPassword" autocomplete="off">
                        </div>

                        <button type="submit">Register</button>
                        <button name="button" value="cancel">Cancel</button>
                    </form>
                </div>
            </div>
        </div>


