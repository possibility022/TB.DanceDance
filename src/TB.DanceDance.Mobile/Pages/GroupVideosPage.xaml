<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:TB.DanceDance.Mobile.Models"
             xmlns:pageModels="clr-namespace:TB.DanceDance.Mobile.PageModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:DataType="pageModels:GroupVideosPageModel"
             x:Name="GroupVideosPageName"
             x:Class="TB.DanceDance.Mobile.Pages.GroupVideosPage">
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
            EventName="Appearing"
            BindingContext="{Binding Path=BindingContext, 
        Source={x:Reference GroupVideosPageName}, 
        x:DataType=pageModels:GroupVideosPageModel}"
            Command="{Binding AppearingCommand}">
        </toolkit:EventToCommandBehavior>
    </ContentPage.Behaviors>
    <ContentPage.Content>
        <Grid>
            <RefreshView IsRefreshing="{Binding IsRefreshing}"
                         Command="{Binding RefreshCommand}">
                <VerticalStackLayout Padding="30, 0">
                    <ScrollView Margin="0,10,0,0">
                        <VerticalStackLayout
                            BindableLayout.ItemsSource="{Binding Videos}">
                            <BindableLayout.ItemTemplate>
                                <DataTemplate x:DataType="models:Video">
                                    <Border Padding="10" Margin="0,10,0,0">
                                        <VerticalStackLayout>
                                            <Label Text="{Binding Name}" FontSize="24">
                                                <Label.GestureRecognizers>
                                                    <TapGestureRecognizer
                                                        Command="{Binding NavigateToWatchVideoCommand, Source={RelativeSource AncestorType={x:Type pageModels:GroupVideosPageModel}}, x:DataType=pageModels:GroupVideosPageModel}"
                                                        CommandParameter="{Binding .}" />
                                                </Label.GestureRecognizers>
                                            </Label>
                                        </VerticalStackLayout>
                                    </Border>
                                </DataTemplate>
                            </BindableLayout.ItemTemplate>
                        </VerticalStackLayout>
                    </ScrollView>
                </VerticalStackLayout>
            </RefreshView>
        </Grid>
    </ContentPage.Content>
</ContentPage>