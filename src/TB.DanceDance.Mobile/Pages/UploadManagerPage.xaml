<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:models="clr-namespace:TB.DanceDance.Mobile.Models"
             xmlns:controls="clr-namespace:TB.DanceDance.Mobile.Pages.Controls"
             x:Class="TB.DanceDance.Mobile.Pages.UploadManagerPage">
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
            EventName="Appearing"                
            Command="{Binding AppearingCommand}" />
    </ContentPage.Behaviors>
    <ContentPage.Content>
        <Grid>
            <VerticalStackLayout 
                BindableLayout.ItemsSource="{Binding UploadedVideos}" 
                Margin="{StaticResource LayoutPadding}" 
                Spacing="{StaticResource LayoutSpacing}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="models:Video">
                        <Border>
                            <VerticalStackLayout Padding="10">
                                <Label Text="{Binding Name}" FontSize="24" />
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>
            
            <controls:AddButton 
                Command="{Binding PickVideosCommand}" />
        </Grid>
    </ContentPage.Content>
</ContentPage>