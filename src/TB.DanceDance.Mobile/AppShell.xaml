<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TB.DanceDance.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TB.DanceDance.Mobile"
    xmlns:pages="clr-namespace:TB.DanceDance.Mobile.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="TB.DanceDance.Mobile">

    <ShellContent
        Title="Menu"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    
    <ShellContent
        Title="Wydarzenia"
        ContentTemplate="{DataTemplate pages:EventsPage}"
        Route="EventsPage" />

    <ShellContent
        Title="Nagrania z Zajęć"
        ContentTemplate="{DataTemplate pages:GroupVideosPage}"
        Route="GroupVideosPage" />    
    
    <ShellContent
        Title="Status wysyłania plików"
        ContentTemplate="{DataTemplate pages:UploadManagerPage}"
        Route="UploadManagerPage" />
    
</Shell>
