<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TB.DanceDance.Mobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TB.DanceDance.Mobile"
    xmlns:pages="clr-namespace:TB.DanceDance.Mobile.Pages"
    xmlns:global="clr-namespace:"
    Shell.FlyoutBehavior="Flyout"
    Title="TB.DanceDance.Mobile">
    
        
    <ShellContent
        Title="Menu"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    
    <ShellContent
        Title="Status wysyłania plików"
        ContentTemplate="{DataTemplate pages:UploadManagerPage}"
        Route="{x:Static global:Routes+Upload.Manager}" />
    
    <TabBar>
        <Tab Title="Wydarzenia"
             Icon="event.png">
            <ShellContent ContentTemplate="{DataTemplate pages:EventsPage}" Route="{x:Static global:Routes+Events.EventsList}" />
        </Tab>
        <Tab Title="Lekcje Reg."
             Icon="dance.png">
            <ShellContent ContentTemplate="{DataTemplate pages:GroupVideosPage}" Route="{x:Static global:Routes+Groups.AllVideos}" />
        </Tab>
    </TabBar>
    
</Shell>
